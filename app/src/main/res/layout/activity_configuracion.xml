<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".vista.Configuracion">

    <TextView
        android:id="@+id/lblMenuConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="ConfiguraciÃ³n"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/lblEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMenuConfiguracion"
        android:layout_marginTop="20dp"
        android:background="@color/colorNegro"
        android:text="Empresa"
        android:textAlignment="center"
        android:textColor="@color/colorBlanco"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spEmpresa"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/lblEmpresa"
        android:layout_marginTop="-2dp"
        android:spinnerMode="dialog"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/lblSucursal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spEmpresa"
        android:layout_marginTop="20dp"
        android:background="@color/colorNegro"
        android:text="Sucursal"
        android:textAlignment="center"
        android:textColor="@color/colorBlanco"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spSucursal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblSucursal"
        android:spinnerMode="dialog"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/imbSincronizacion"
        android:layout_width="59dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="146dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/sincroniza" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="184dp"
        android:layout_toEndOf="@+id/imbSincronizacion"
        android:text="Sincroniza Tablas"
        android:textColor="@color/colorNegro"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGrabar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp"
        android:background="@color/colorAzul"
        android:text="GRABAR"
        android:textColor="@color/colorBlanco"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSalirSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:background="@color/colorRojo"
        android:text="VOLVER A MENU"
        android:textColor="@color/colorBlanco"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Ip Servidor"
        android:inputType="textPersonName"
        android:text="http://192.168.43.232:1819/Api/" />

</RelativeLayout>