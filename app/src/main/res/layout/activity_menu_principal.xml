<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context=".vista.MenuPrincipal">

    <TextView
        android:id="@+id/lblMenuPrincipalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="MENÚ PRINCIPAL"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/imbPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMenuPrincipalText"
        android:layout_marginTop="50dp"
        android:background="@color/colorBlanco"
        android:src="@drawable/icono_personal"/>

    <TextView
        android:id="@+id/lblTituloPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imbPersonal"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="REGISTRO DE PERSONAL"/>

    <ImageButton
        android:id="@+id/imbRegistroMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTituloPersonal"
        android:layout_marginTop="50dp"
        android:background="@color/colorBlanco"
        android:src="@drawable/icono_calendario"/>

    <TextView
        android:id="@+id/lblRegistraMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imbRegistroMovimiento"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="REGISTRO DE INGRESO Y SALIDA"/>

    <ImageButton
        android:id="@+id/imbConfiguracion"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorBlanco"
        android:src="@drawable/ajustes" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@+id/imbConfiguracion"
        android:text="Configuración" />

    <ImageButton
        android:id="@+id/imbSincronizaMenu"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/imbConfiguracion"
        android:layout_toStartOf="@+id/textView3"
        android:background="@color/colorBlanco"
        android:src="@drawable/sincroniza" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="15dp"
        android:text="Sincronizar" />


</RelativeLayout>