<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context=".vista.RegistroIngresoSalida">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnRegistraMovimiento"
        android:layout_marginTop="-10dp"
        android:text="Cargo:"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblDatosPersonales3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="219dp"
        android:background="@color/colorNegro"
        android:text="Personal"
        android:textAlignment="center"
        android:textColor="@color/colorBlanco" />

    <Spinner
        android:id="@+id/spTipoAccesoMovimiento"
        android:layout_width="161dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView6"
        android:layout_marginEnd="9dp"
        android:background="@color/common_action_bar_splitter"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="143dp"
        android:layout_toStartOf="@+id/txtNombreApellidoMovimiento"
        android:text="Motivo Movimiento" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="52dp"
        android:text="Tipo de Acceso" />

    <ImageButton
        android:id="@+id/imbFechaHoraMovimiento"
        android:layout_width="62dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/spTipoAccesoMovimiento"
        android:layout_below="@+id/lblDatosPersonales2"
        android:background="@color/colorBlanco"
        app:srcCompat="@drawable/calendario_hora_n" />

    <TextView
        android:id="@+id/lblDatosPersonales2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@color/colorNegro"
        android:text="Movimiento "
        android:textAlignment="center"
        android:textColor="@color/colorBlanco" />

    <TextView
        android:id="@+id/lblTituloMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="REGISTRO INGRESO - SALIDA"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imbFechaHoraMovimiento"
        android:layout_alignParentStart="true"
        android:text="Fecha y Hora:" />

    <EditText
        android:id="@+id/txtFechaHoraMovimiento"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColor="@color/colorNegro"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spMotivoMovimiento"
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/btnRegistraMovimiento"
        android:layout_alignTop="@+id/spTipoAccesoMovimiento"
        android:background="@color/common_action_bar_splitter"
        android:spinnerMode="dialog" />

    <EditText
        android:id="@+id/txtDniMovimiento"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBuscaVehiculo"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="DNI"
        android:inputType="number"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtNombreApellidoMovimiento"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spTipoAccesoMovimiento"
        android:layout_alignTop="@+id/txtDniMovimiento"
        android:ems="10"
        android:hint="Nombres y Apellidos"
        android:inputType="textPersonName"
        android:textColor="@color/colorNegro"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDniMovimiento"
        android:layout_marginStart="327dp"
        android:layout_toEndOf="@+id/textView8"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="244dp"
        android:text="VehÃ­culo:" />

    <EditText
        android:id="@+id/txtVehiculoMovimiento"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtPlacaMovimiento"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtModeloMovimiento"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Placa"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtMarcaMovimiento"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spTipoAccesoMovimiento"
        android:layout_alignTop="@+id/txtPlacaMovimiento"
        android:ems="10"
        android:hint="Marca"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtModeloMovimiento"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="148dp"
        android:ems="10"
        android:hint="Modelo"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnBuscaVehiculo"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:text="..." />

    <Button
        android:id="@+id/btnRegistraMovimiento"
        android:layout_width="353dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/btnVolverMenuMovimiento"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_registra_persona"
        android:text="Registrar"
        android:textColor="@color/colorBlanco" />

    <Button
        android:id="@+id/btnVolverMenuMovimiento"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/boton_volver_menu"
        android:text="Volver a Menu"
        android:textColor="@color/colorBlanco" />


</RelativeLayout>